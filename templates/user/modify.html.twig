{% extends 'base.html.twig' %}

{% block title %}Ferrovipath - {{ profil.pseudo }}{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="card">
        <div class="card-header bg-primary text-white text-center">
            <h1 class="mb-0">Profil-Modification</h1>
        </div>
        <div class="card-body">
            <div class="row text-center d-flex justify-content-center ">
                <div class="col-md-6">
                    <ul class="list-group mb-4">
                        <li class="list-group-item"><strong>Email :</strong> {{ profil.email }}</li>
                        <li class="list-group-item"><strong>Mot de passe :</strong> {{ profil.password }}</li>
                        <li class="list-group-item"><strong>Pseudonyme :</strong> {{ profil.pseudo }}</li>
                        <li class="list-group-item"><strong>Né(e) le :</strong> {{ profil.birth|date('Y-m-d') }}</li>
                        <li class="list-group-item"><strong>Crée le :</strong> {{ profil.createdAt|date('Y-m-d') }}</li>
                    </ul>
                </div>
            </div>
            <div class="d-grid gap-2 col-2 mx-auto">
                <button type="button" class="btn btn-secondary">Modifier</button>
                <button type="button" class="btn btn-danger">Supprimer le compte</button>
            </div>
        </div>
    </div>
</div>
{% endblock %}