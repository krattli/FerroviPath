{% extends 'base.html.twig' %}

{% block title %}Hello GameController!{% endblock %}

{% block body %}
<style>
    body {
        background-color: #FCF9ED;
    }
    .container {
        display: flex;
    }

    .left-column {
        width: 30%;
        padding-right: 20px;
        margin-top: 20px;
    }

    .right-column {
        width: 70%;
    }

    .completion-block {
        background-color: white;
        border: 2px solid #C0C0C0;
        color: #C0C0C0;
        border-radius: 10px;
        margin-bottom: 20px;
        display: flex;
        flex-direction: column;
        align-items: center;
    }

    .completion-title {
        font-weight: bold;
        color: #808080;
        border-bottom: 2px solid #808080;
        width: 100%;
        text-align: center;
        padding-bottom: 15px;
        margin-top: 15px;
    }

    .completion-content {
        margin: 15px;
        display: flex;
        flex-direction: column;
        align-items: center;
        width: 100%;
    }

    .completion-line {
        display: flex;
        justify-content: center;
        width: 80%;
        flex-wrap: wrap;
        margin-bottom: 10px;
    }

    .field-name {
        color: #808080;
        font-weight: bold;
    }

    .field-value {
        color: #C0C0C0;
    }

    .custom-input {
        border: 2px solid #E0E0E0;
        border-radius: 10px;
        padding: 8px;
        text-align: center;
        flex: 1;
    }

    .instruction-block {
        background-color: #FCF9ED;
        color: #292D32;
        padding: 20px;
        border-radius: 10px;
        margin-bottom: 20px;
    }

    .game-area {
        background-color: #FCF9ED;
        padding: 20px;
        border: 1px solid #292D32;
        border-radius: 10px;
        margin-bottom: 20px;
        height: 300px;
    }

    .button-container {
        display: flex;
        justify-content: flex-end;
        gap: 10px;
        padding-left: 20px;
    }

    .game-button {
        background-color: #F9D8D9;
        color: #D78C8D;
        border: 2px solid #D78C8D;
        padding: 10px 20px;
        margin: 5px;
        border-radius: 15px;
        cursor: pointer;
    }
</style>
<body>
<div class="container">
    <div class="left-column">
        <div class="completion-block">
            <div class="completion-title">Completion</div>
            <div class="completion-content">
                <div class="completion-line">
                    <span class="field-name">Temps :</span>
                    <span class="field-value">XXXX</span>
                </div>
                <div class="completion-line">
                    <span class="field-name">Lignes :</span>
                    <span class="field-value">XX/XX</span>
                </div>
                <div class="completion-line">
                    <span class="field-name">Score :</span>
                    <span class="field-value">XXXX</span>
                </div>
            </div>
        </div>

        <div class="completion-block">
            <div class="completion-title">Entrer une station</div>
            <div class="completion-content">
                <div class="completion-line">
                    <span class="field-name">Station :</span>
                    <input type="text" class="custom-input">
                </div>
                <div class="completion-line">
                    <span class="field-name">Correspondance :</span>
                    <input type="text" class="custom-input">
                </div>
            </div>
        </div>
    </div>

    <div class="right-column">
        <div class="instruction-block">
            <h2>Ferrovipath - (mode de jeu)</h2>
            <p><strong>Consigne :</strong> Compléter toutes les stations de la ligne 7 du métro de Paris</p>
        </div>

        <div class="game-area">
            <p>Ici se trouve le jeu en lui-même</p>
        </div>

        <div class="button-container">
            <button class="game-button">Abandonner</button>
            <button class="game-button">Rejouer</button>
            <button class="game-button">Sauvegarder et quitter</button>
        </div>
    </div>
</div>
</body>
{% endblock %}
